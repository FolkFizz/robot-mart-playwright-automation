{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2023", "DOM"],
    "types": ["node", "@playwright/test"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@fixtures": ["src/fixtures"],
      "@fixtures/*": ["src/fixtures/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@data": ["src/data"],
      "@data/*": ["src/data/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@test-helpers": ["src/test-support"],
      "@test-helpers/*": ["src/test-support/*"],
      "@app-types": ["src/types"],
      "@app-types/*": ["src/types/*"]
    },
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "playwright.config.ts"],
  "exclude": ["node_modules", "dist"]
}
