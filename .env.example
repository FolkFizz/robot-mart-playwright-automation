## Use `.env.local.example` or `.env.prod-safe.example` as the primary templates.
## URL strategy
## - BASE_URL: target for Playwright (UI/API/Integration/Security/A11y)
## - PERF_BASE_URL: optional k6-only override (recommended for perf against another host)
## - REAL_URL: legacy alias for k6 override (backward compatibility)
BASE_URL="http://localhost:3000"
PERF_BASE_URL=""
REAL_URL=""
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB_NAME?sslmode=require"

USER_USERNAME="user"
USER_PASSWORD="change-me"
USER_EMAIL="user@robotstore.com"

ADMIN_USERNAME="admin"
ADMIN_PASSWORD="change-me"
ADMIN_EMAIL="admin@robotstore.com"

TEST_API_KEY="change-me"
RESET_KEY="change-me"
CHAOS_ENABLED=false
PAYMENT_MOCK=mock
SEED_DATA=true
SEED_STOCK=100
ALLOW_DESTRUCTIVE_TEST_HOOKS=false

TEST_EMAIL_DOMAIN="example.com"
TEST_INVALID_USERNAME="invalid_user"
TEST_INVALID_PASSWORD="wrong_password"
TEST_WRONG_USERNAME="wrong_username"
TEST_WRONG_PASSWORD="wrong_password"
TEST_NON_EXISTENT_EMAIL="nonexistent@example.com"
TEST_INVALID_RESET_TOKEN="invalid_token_12345"
TEST_RESET_NEW_PASSWORD=""
TEST_RESET_MISMATCH_PASSWORD=""
TEST_INVALID_RESET_KEY="INVALID_RESET_KEY"
TEST_ISOLATED_USER_PASSWORD=""
TEST_CHECKOUT_EMAIL=""

PERF_USER=""
PERF_PASSWORD=""
