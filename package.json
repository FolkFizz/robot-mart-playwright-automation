{
  "name": "robot-store-playwright-automation",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "test": "cross-env NODE_ENV=test playwright test",
    "test:smoke": "cross-env NODE_ENV=test playwright test --grep \"@smoke\" --grep-invert \"@stripe|@chaos|@ai\"",
    "test:regression": "cross-env NODE_ENV=test playwright test --grep \"@regression\"",
    "test:api": "cross-env NODE_ENV=test playwright test tests/functional/api --grep \"@api\"",
    "test:a11y": "cross-env NODE_ENV=test playwright test tests/non-functional/a11y --grep \"@a11y\"",
    "report:allure": "allure generate allure-results -o allure-report --clean",
    "report:open": "allure open allure-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.11.30",
    "allure-playwright": "^2.15.1",
    "cross-env": "^7.0.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
