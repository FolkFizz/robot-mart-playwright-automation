{
  "name": "robot-store-playwright-automation",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "allure:clean": "node scripts/clean-allure.js",
    "pw:test": "npm run allure:clean && playwright test",
    "test": "npm run pw:test",
    "test:prod": "npm run allure:clean && cross-env BASE_URL=https://robot-store-sandbox.onrender.com playwright test --grep \"@smoke|@safe\"",
    "test:smoke": "npm run pw:test -- --grep \"@smoke\" --grep-invert \"@stripe|@chaos|@ai\"",
    "test:regression": "npm run pw:test -- --grep \"@regression\"",
    "test:api": "npm run pw:test -- tests/api --grep \"@api\"",
    "test:a11y": "npm run pw:test -- tests/a11y --grep \"@a11y\"",
    "test:quick-regression": "npm run pw:test -- tests/api tests/e2e tests/security tests/a11y --project=chromium --grep \"@smoke|@regression\" --grep-invert \"@chat|@ai|@chaos|@stripe|@destructive\" --max-failures=10",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" \"playwright.config.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "ci:quality": "npm run format:check && npm run typecheck && npm run lint",
    "ci:quick": "npm run ci:quality && npm run test:quick-regression",
    "format": "prettier --write \"{src,tests,performance,scripts,docs}/**/*.{ts,js,cjs,mjs,json,md,yml,yaml}\" \"*.{ts,js,cjs,mjs,json,md}\"",
    "format:check": "prettier --check \"{src,tests,performance,scripts,docs}/**/*.{ts,js,cjs,mjs,json,md,yml,yaml}\" \"*.{ts,js,cjs,mjs,json,md}\"",
    "report:allure": "allure generate allure-results -o allure-report --clean",
    "report:open": "allure open allure-report",
    "env:use:local": "node scripts/switch-env.js local",
    "env:use:prod": "node scripts/switch-env.js prod",
    "env:targets": "node scripts/show-targets.js",
    "stock:reset": "node scripts/reset-stock-via-api.js",
    "stock:reset:local": "npm run env:use:local && npm run stock:reset",
    "stock:reset:prod": "npm run env:use:prod && npm run stock:reset",
    "metrics:playwright": "node scripts/playwright-metrics.js",
    "setup:stock": "npm run stock:reset",
    "k6:run": "node scripts/run-k6.js",
    "monitor:up": "docker compose -f docker-compose.monitor.yml up -d",
    "monitor:down": "docker compose -f docker-compose.monitor.yml down",
    "monitor:down:volumes": "docker compose -f docker-compose.monitor.yml down -v",
    "monitor:status": "docker compose -f docker-compose.monitor.yml ps",
    "monitor:logs": "docker compose -f docker-compose.monitor.yml logs -f",
    "test:perf:auth": "npm run k6:run -- performance/scripts/auth.k6.js",
    "test:perf:smoke": "npm run k6:run -- performance/scripts/smoke.k6.js",
    "test:perf:browse": "npm run k6:run -- performance/scripts/browse.k6.js",
    "test:perf:cart": "npm run k6:run -- performance/scripts/cart.k6.js",
    "test:perf:checkout": "npm run k6:run -- performance/scripts/checkout.k6.js",
    "test:perf:checkout-acceptance": "cross-env CHECKOUT_MODE=acceptance npm run k6:run -- performance/scripts/checkout.k6.js",
    "test:perf:race": "npm run k6:run -- performance/scripts/race-condition.k6.js",
    "test:perf:load": "npm run k6:run -- performance/scripts/load.k6.js",
    "test:perf:load-acceptance": "cross-env TEST_MODE=acceptance npm run k6:run -- performance/scripts/load.k6.js",
    "test:perf:stress": "npm run k6:run -- performance/scripts/stress.k6.js",
    "test:perf:soak": "npm run k6:run -- performance/scripts/soak.k6.js",
    "test:perf:breakpoint": "npm run k6:run -- performance/scripts/breakpoint.k6.js",
    "test:perf:suite": "node scripts/run-perf-suite.js --profile portfolio",
    "test:perf:suite:gate": "node scripts/run-perf-suite.js --profile gate",
    "test:perf:smoke:monitor": "cross-env K6_OUT=experimental-prometheus-rw=http://localhost:9090/api/v1/write K6_PROMETHEUS_RW_TREND_STATS=p(95),p(99),avg,min,max npm run test:perf:smoke",
    "test:perf:suite:monitor": "cross-env K6_OUT=experimental-prometheus-rw=http://localhost:9090/api/v1/write K6_PROMETHEUS_RW_TREND_STATS=p(95),p(99),avg,min,max npm run test:perf:suite",
    "test:perf:suite:gate:monitor": "cross-env K6_OUT=experimental-prometheus-rw=http://localhost:9090/api/v1/write K6_PROMETHEUS_RW_TREND_STATS=p(95),p(99),avg,min,max npm run test:perf:suite:gate",
    "test:quick-regression:stable": "npm run pw:test -- tests/api tests/e2e tests/security tests/a11y --project=chromium --grep \"@smoke|@regression\" --grep-invert \"@chat|@ai|@chaos|@stripe|@destructive\" --max-failures=10 --workers=1"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@playwright/test": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.16.0",
    "allure-playwright": "^2.15.1",
    "allure-commandline": "^2.36.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "pg": "^8.12.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
